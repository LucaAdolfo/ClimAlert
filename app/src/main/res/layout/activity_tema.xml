<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TemaActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/headerGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.20" />

    <TextView
        android:id="@+id/idTitle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/darker_gray"
        android:gravity="center_vertical|start"
        android:paddingStart="175dp"
        android:text="TEMA"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/headerGuideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnIndietro"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/settings_button_background"
        android:contentDescription="Torna indietro"
        android:elevation="4dp"
        android:padding="8dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_goback"
        app:tint="#000000"

        app:layout_constraintTop_toTopOf="@id/idTitle"
        app:layout_constraintBottom_toBottomOf="@id/idTitle"

        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/rectangle_light"
        android:layout_width="150dp"
        android:layout_height="250dp"
        android:background="@drawable/rectangle_light"
        android:layout_marginStart="45dp"
        android:layout_marginTop="50dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerGuideline"/>

    <View
        android:id="@+id/rectangle_dark"
        android:layout_width="150dp"
        android:layout_height="250dp"
        android:background="@drawable/rectangle_dark"
        android:layout_marginEnd="45dp"
        android:layout_marginTop="50dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerGuideline"/>

    <ImageView
        android:id="@+id/light_theme"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="100dp"
        android:layout_marginStart="70dp"
        android:src="@drawable/sole"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerGuideline"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/dark_theme"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="80dp"
        android:src="@drawable/luna"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerGuideline"
        tools:ignore="ContentDescription" />

    <RadioGroup
        android:id="@+id/radioGroupTema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="105dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/light_theme" >

        <RadioButton
            android:id="@+id/rdbChiaro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text=""
            app:buttonTint="@color/black"
            app:layout_constraintEnd_toEndOf="@id/light_theme"
            app:layout_constraintStart_toStartOf="@id/light_theme"
            app:layout_constraintTop_toBottomOf="@id/light_theme" />

        <RadioButton
            android:id="@+id/rdbScuro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            app:buttonTint="@color/white"
            android:layout_marginStart="120dp"
            app:layout_constraintEnd_toEndOf="@id/dark_theme"
            app:layout_constraintStart_toStartOf="@id/dark_theme"
            app:layout_constraintTop_toBottomOf="@id/dark_theme" />

    </RadioGroup>



</androidx.constraintlayout.widget.ConstraintLayout>